<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (productsToRender.length > 0) { %>
            <div class="grid">
                <% for (let actualProduct of productsToRender) { %>
                    <article class="card product-item">
                        <header class="card__header">
                            <h1 class="product__title"><%= actualProduct.title %></h1>
                        </header>
                        <div class="card__image">
                            <img src="/<%= actualProduct.imageURL %>"
                                alt="<%= actualProduct.title %>">
                        </div>
                        <div class="card__content">
                            <h2 class="product__price">$<%= actualProduct.price %></h2>
                            <p class="product__description"><%= actualProduct.description %></p>
                        </div>
                        <div class="card__actions">
                            <a href="/products/<%= actualProduct._id %>" class="btn">Details</a>
                            <%- include('../includes/add-to-cart', {productToRender: actualProduct} ) %>
                        </div>
                    </article>
                <% } %>
            </div>
            <%- include('../includes/pagination', {currentPage, previousPage, hasPreviousPage, hasNextPage, nextPage, lastPage} ) %>
        <% } else { %>
            <h1>No Products Found!</h1>
        <% } %>
    </main>
<%- include('../includes/end.ejs') %>